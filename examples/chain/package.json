{
  "name": "chain",
  "version": "1.0.0",
  "description": "running multiple chains and runnign tests against shuttle devnet",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "fix": "npm run fix:prettier && npm run fix:lint",
    "fix:prettier": "prettier \"**/*.{ts,md}\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "npm run build && nyc --silent ava --serial"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ava/typescript": "^3.0.1",
    "@confio/relayer": "^0.7.0",
    "@cosmjs/amino": "^0.29.3",
    "@cosmjs/cosmwasm-stargate": "^0.29.3",
    "@cosmjs/proto-signing": "^0.29.3",
    "@cosmjs/stargate": "^0.29.3",
    "@types/sinon": "^10.0.13",
    "ava": "^5.0.1",
    "eslint": "^8.27.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "run-s": "^0.0.0",
    "run-script": "^0.1.1",
    "sinon": "^14.0.0",
    "typescript": "^4.7.4"
  },
  "ava": {
    "failFast": true,
    "timeout": "120s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": false
    }
  }
}
